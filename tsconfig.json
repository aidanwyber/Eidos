{
	"compilerOptions": {
		"target": "ES2015", // ES2022
		"module": "ESNext",
		"declaration": true,
		"outDir": "./dist"
	},
	"include": ["src"],

	/* Linting */
	"strict": true,
	"noUnusedLocals": true,
	"noUnusedParameters": true,
	"erasableSyntaxOnly": true,
	"noFallthroughCasesInSwitch": true,
	"noUncheckedSideEffectImports": true,

	/* Browser dev tools */
	"sourceMap": true,
	"inlineSources": true
}
